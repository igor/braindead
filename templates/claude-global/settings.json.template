{
  "comment": "Claude Code settings template - replace placeholders with your values",
  "comment2": "For sensitive values, use settings.local.json (not tracked in git)",

  "permissions": {
    "comment": "Define allowed operations and prompts",
    "allowedPrompts": [
      {
        "tool": "Bash",
        "prompt": "{PERMISSION_DESCRIPTION_1}"
      },
      {
        "tool": "Bash",
        "prompt": "{PERMISSION_DESCRIPTION_2}"
      }
    ]
  },

  "workspaces": {
    "comment": "Define workspace-specific configurations",
    "{WORKSPACE_NAME}": {
      "claudeMdPath": "{PATH_TO_CLAUDE_MD}",
      "additionalContext": "{CONTEXT_DESCRIPTION}"
    }
  },

  "mcp": {
    "comment": "MCP server configuration",
    "servers": {
      "{SERVER_NAME}": {
        "command": "{COMMAND}",
        "args": ["{ARG1}", "{ARG2}"],
        "env": {
          "{ENV_VAR}": "{VALUE}"
        }
      }
    }
  },

  "preferences": {
    "comment": "General preferences",
    "model": "{PREFERRED_MODEL}",
    "maxTokens": 200000,
    "temperature": 1.0
  },

  "custom": {
    "comment": "Your custom configuration",
    "{CUSTOM_KEY_1}": "{CUSTOM_VALUE_1}",
    "{CUSTOM_KEY_2}": "{CUSTOM_VALUE_2}"
  }
}
